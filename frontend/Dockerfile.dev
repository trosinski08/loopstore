FROM node:24-slim


WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with increased timeout and using a reliable registry
RUN npm config set registry https://registry.npmjs.org/ && \
    npm config set fetch-timeout 300000 && \
    npm install --legacy-peer-deps

# Copy the rest of the application
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"] 